<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

   package="com.dit599.customPD"
    android:installLocation="auto"
    android:versionCode="67"
    android:versionName="0.9c" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-feature android:glEsVersion="0x00020000" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false" />
    <!-- android:xlargeScreens="true" -->

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        
        <activity
            android:name="com.dit599.customPD.CustomPD"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.dit599.customPD.editorUI.FloorsListActivity">
            <intent-filter>
                <action android:name="com.dit599.customPD.editorUI.FloorsListActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".editorUI.MapEditActivity"
            android:label="Map filename" />
        
        <activity android:name=".editorUI.MapMobItemActivity"
              android:label="Set Mobtype"/>
        
        <activity android:name=".editorUI.MapSelectArmorActivity"/>
        
        <activity android:name=".editorUI.MapSelectorActivity"
            android:label="Maps">
            <intent-filter>
                 <action android:name="SelectMapToEdit" />
                 <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.dit599.customPD.editorUI.EnchantableItemsActivity"
            android:label="Items" >
            <intent-filter>
                <action android:name="com.dit599.customPD.editorUI.EnchantableItemsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity android:name="com.dit599.customPD.editorUI.ItemsActivity"
            android:label="Items" >
            <intent-filter>
                <action android:name="com.dit599.customPD.editorUI.ItemsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity android:name="com.dit599.customPD.editorUI.MagicItemsActivity"
            android:label="Items" >
            <intent-filter>
                <action android:name="com.dit599.customPD.editorUI.MagicItemsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>