<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/mapselectitembutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    
       <TabHost  
        android:id="@+id/mapselecttabs"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >  
  
        <LinearLayout  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:orientation="vertical" >  
  
            <TabWidget  
                android:id="@android:id/tabs"  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content" 
                >                
            </TabWidget>  
           <FrameLayout  
                android:id="@android:id/tabcontent"  
                android:layout_width="wrap_content"  
                android:layout_height="fill_parent" >  
  
                <TextView  
                    android:id="@+id/mapselectfloortab_1"  
                    android:layout_width="wrap_content"  
                    android:layout_height="fill_parent"  
                    android:text="" >  
                </TextView>  
  
                <TextView  
                    android:id="@+id/mapselectfloortab_2"  
                    android:layout_width="wrap_content"  
                    android:layout_height="fill_parent"  
                    android:text="" >  
                </TextView>  
               
              
            </FrameLayout>  
        </LinearLayout>  
    </TabHost> 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mapselecttv1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Theme :"
                android:textSize="30px" >
            </TextView>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80px"
                android:layout_weight="0.11"
                android:prompt="@string/theme" />

        </LinearLayout>
      
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:orientation="horizontal" >
            
               <TextView
                   android:id="@+id/mapselecttv2"
                   android:layout_width="150dp"
                   android:layout_height="30dp"
                   android:textSize="30px"
                   android:text="Mob frequence :" >
                </TextView>   

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="170dp"
                    android:layout_height="30dp" 
                    android:prompt="@string/theme"
                    />

      </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal" >
            
               <TextView
                   android:id="@+id/mapselecttv3"
                   android:layout_width="150dp"
                   android:layout_height="30dp"
                   android:textSize="30px"
                   android:text="Mob Limit :" >
                </TextView>   

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="170dp"
                    android:layout_height="30dp" 
                    android:prompt="@string/theme"
                    />

      </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <ImageButton
               android:id="@+id/mobsbutton1"
               android:layout_width="120px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/mobsbutton2"
               android:layout_width="120px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/mobsbutton3"
               android:layout_width="120px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/mobsbutton4"
               android:layout_width="120px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />

                </LinearLayout>
                <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <ImageButton
               android:id="@+id/weaponsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/armorsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
          

                </LinearLayout>
                 <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <ImageButton
               android:id="@+id/potionsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/scrollsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
          

                </LinearLayout>
                 <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <ImageButton
               android:id="@+id/roomsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
           <ImageButton
               android:id="@+id/consumsbutton"
               android:layout_width="240px"
               android:layout_height="wrap_content"
               android:src="@drawable/icon" />
          

                </LinearLayout>
</LinearLayout>
