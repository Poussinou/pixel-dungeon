<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/armmorbut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/armspinner1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10px"
            android:prompt="@string/theme" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ench "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
         <Spinner
            android:id="@+id/armspinner2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10px"
            android:prompt="@string/theme" />

    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Level "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
         <Spinner
            android:id="@+id/armspinner3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10px"
            android:prompt="@string/theme" />

    </LinearLayout>
    
   <ScrollView
	android:id="@+id/maparmselectscroll" 
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout 		
		android:orientation="vertical" 
		android:id="@+id/maparmselectlinear"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="50px"
		>
		<Button
		android:id="@+id/armaddbut"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"  
		android:text="+"
		/>   

		
	</LinearLayout>
</ScrollView>
   
   
</LinearLayout>
